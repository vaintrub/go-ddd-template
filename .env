APP_ENV=development

PORT=3000

TRAINER_GRPC_ADDR=trainer-grpc:3000
USERS_GRPC_ADDR=users-grpc:3000
GRPC_NO_TLS=1

CORS_ALLOWED_ORIGINS=http://localhost:8080
SERVER_PUBLIC_AUTH_SKIP_PATHS=/auth/casdoor/callback

#SERVICE_ACCOUNT_FILE=/service-account-file.json
MOCK_AUTH=true
LOCAL_ENV=true

# PostgreSQL Configuration
DATABASE_URL=postgres://postgres:postgres@postgres:5432/go_ddd_template_dev?sslmode=disable
DB_POOL_MAX_CONNS=25
DB_POOL_MIN_CONNS=5
DB_POOL_TIMEOUT=30s

# Casdoor identity provider (optional)
CASDOOR_ENABLED=true
CASDOOR_ENDPOINT=http://host.docker.internal:8000
CASDOOR_CLIENT_ID=local-client
CASDOOR_CLIENT_SECRET=local-secret
CASDOOR_ORG_SLUG=local-org
CASDOOR_APPLICATION_NAME=local-app
CASDOOR_ADMIN_USERNAME=admin@local.dev
CASDOOR_ADMIN_PASSWORD=admin123
CASDOOR_CALLBACK_URL=http://localhost:8080/auth/callback
